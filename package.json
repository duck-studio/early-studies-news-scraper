{
  "name": "early-studies-api",
  "version": "1.0.0",
  "description": "Hono API for Early Studies",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "deploy": "wrangler deploy src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "types": "npx wrangler types",
    "check": "biome check --apply .",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate --config=./src/db/drizzle.config.ts",
    "db:migrate": "npx wrangler d1 migrations apply early-studies-d1-database --remote",
    "db:migrate:local": "npx wrangler d1 migrations apply early-studies-d1-database",
    "db:studio": "drizzle-kit studio --config=./src/db/drizzle.config.ts",
    "db:seed": "npx wrangler d1 execute early-studies-d1-database --file=src/db/seed.sql --remote",
    "db:seed:local": "npx wrangler d1 execute early-studies-d1-database --file=src/db/seed.sql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.6",
    "@cloudflare/vitest-pool-workers": "^0.8.9",
    "@hono/zod-validator": "^0.4.3",
    "@libsql/client": "^0.15.2",
    "@scalar/hono-api-reference": "^0.7.4",
    "ai": "^4.2.11",
    "async-retry": "^1.3.3",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.41.0",
    "hono": "^4.4.12",
    "hono-openapi": "^0.4.6",
    "nanoid": "^5.0.6",
    "p-limit": "^4.0.0",
    "pino": "^9.2.0",
    "vitest": "^3.0.9",
    "wrangler": "^4.4.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/async-retry": "^1.4.8",
    "@types/node": "^20.17.28",
    "drizzle-kit": "^0.30.6",
    "pino-pretty": "^11.3.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.2"
  }
}